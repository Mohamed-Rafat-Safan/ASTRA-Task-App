<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemPost"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_8sdp"
    app:cardUseCompatPadding="true"
    android:layout_marginHorizontal="@dimen/_6sdp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_10sdp">


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_postImage"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:background="@color/light_gray"
            android:scaleType="centerCrop"
            android:src="@drawable/post_def"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/CircleImageShape" />


        <TextView
            android:id="@+id/tv_postTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Post One"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/iv_arrowRight"
            app:layout_constraintStart_toEndOf="@+id/iv_postImage"
            app:layout_constraintTop_toTopOf="@+id/iv_postImage" />

        <TextView
            android:id="@+id/tv_postContent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_6sdp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Learn the best practices for mobile development Learn the best practices for mobile mohamed rafat"
            app:layout_constraintBottom_toBottomOf="@+id/iv_postImage"
            app:layout_constraintEnd_toEndOf="@+id/tv_postTitle"
            app:layout_constraintStart_toStartOf="@+id/tv_postTitle"
            app:layout_constraintTop_toBottomOf="@+id/tv_postTitle" />


        <ImageView
            android:id="@+id/iv_arrowRight"
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:src="@drawable/arrow_right"
            app:layout_constraintBottom_toBottomOf="@+id/iv_postImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_postImage"
            app:tint="@color/gray" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>